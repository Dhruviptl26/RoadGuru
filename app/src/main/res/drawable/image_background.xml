<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/image_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="#80000000"/> <!-- Shadow color (semi-transparent black) -->
            <corners android:radius="16dp"/> <!-- Same corner radius -->
        </shape>
    </item>

    <!-- Main Shape Layer -->
    <item>
        <shape>
            <solid android:color="#ffffff"/> <!-- Background color -->
            <corners android:radius="16dp"/> <!-- Corner radius for rounded corners -->
            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"
                android:bottom="8dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/black"/> <!-- Border color -->
        </shape>
    </item>

    <!-- Image Layer -->
    <item>
        <bitmap
            android:src="@drawable/location"
        android:gravity="center"
        android:alpha="0.5" /> <!-- Make the image lighter with alpha transparency -->
    </item>

</layer-list>
