<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/first">

    <!-- Toolbar -->

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"> <!-- Adding padding for inner content -->

            <!-- Fine Payment Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/round_rect">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Fine Payment"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/searchFineDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/searchFineButton"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:text="Search and pay for traffic fine"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/searchFineButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="16dp"
                    android:backgroundTint="#3c9b72"
                    android:text="Search"
                    android:textColorLink="#3c9b72" />
            </RelativeLayout>

            <!-- Enter Car Number Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="169dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/round_rect">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Enter Car Number"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/referenceNumber"
                    android:layout_width="224dp"
                    android:layout_height="59dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="22dp"
                    android:hint="Insert reference number"
                    android:textAppearance="@android:style/Theme.Black"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/submitReference"
                    android:layout_width="99dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/referenceNumber"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toEndOf="@+id/referenceNumber"
                    android:backgroundTint="#3C9B72"
                    android:text="Enter" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <!-- BottomNavigationView -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fffafa"
        app:itemIconTint="#3c9b72"
        app:itemRippleColor="#3c9b72"
        app:itemTextColor="@color/black"
        app:menu="@menu/bottom_navigation_menu" />

</LinearLayout>
