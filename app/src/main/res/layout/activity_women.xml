<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="16dp"
    tools:context=".women">

    <TextView
        android:id="@+id/tvCallUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call us"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <!-- First row for emergency 999 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/tv999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="181"
            android:textSize="22sp"
            android:textColor="#FF4444"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvForEmergencies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ministry of Women and Child Development"
            android:textColor="#FFFFFF"
            android:layout_weight="2" />

        <Button
            android:id="@+id/btn999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALL"
            android:textColor="#FF4444"
            android:backgroundTint="#000000"
            android:layout_marginLeft="8dp" />
<!--        android:background="@drawable/button_border_red"-->
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444444"
        android:layout_marginVertical="8dp" />

    <!-- Second row for Call Center 901 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/tv901"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1098"
            android:textSize="22sp"
            android:textColor="#00FF00"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvCallCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Child Helpline"
            android:textColor="#FFFFFF"
            android:layout_weight="2" />

        <Button
            android:id="@+id/btnCall901"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALL"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000000"
            android:layout_marginLeft="8dp" />
<!--        android:background="@drawable/button_border_white"-->
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444444"
        android:layout_marginVertical="8dp" />

</LinearLayout>
